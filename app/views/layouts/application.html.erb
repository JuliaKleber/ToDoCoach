  </head>

  <body>
    <%= render "shared/navbar" %>
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <%= yield %>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
      </div>
     </div>
    </div>
  </body>
</html>
