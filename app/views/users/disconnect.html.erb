<% @following.each do |user| %>
  <%= form_with(model: follow, url: destroy_connection_user_path(current_user), method: :delete, class: 'card d-flex flex-row justify-content-around') do |form| %>
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, class: "avatar" %>
    <% else %>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <% end %>
    <%= user.user_name %>
    <%= form.hidden_field :followed_id, value: user.id %>
    <%= form.submit "Disconnect", class: "btn-reminder" %>
  <% end %>
<% end %>
