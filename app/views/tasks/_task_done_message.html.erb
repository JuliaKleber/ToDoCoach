  <div class="row">
    <div class="col-12 col-lg-6">
      <div class="position-relative">
        </div>

        <div class="container text-center">
          <%= image_tag "To Do Coach glasses (1).png", class: "avatar text-center", id: "pop-up-avatar" %>
        </div>

        <div class="text-center">
          <h1 class="message-slogan text-center fw-bolder">You crushed this!</h1>
          <span> Congratulations on completing: </span>
          <p class="mt-3"><%= @task.title %> ðŸŽ‰ </p>
        </div>

        <div class="reminder-container mt-4 position-relative">
