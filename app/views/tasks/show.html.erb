<div>
 <div class="row">
    <div class="col-12 col-md-6">
      <div class="bg-white rounded p-3">
        <h2>TASK</h2>

        <hr>
        <p>
        <%= link_to "Cathegories", "#", class: "btn btn-secondary" %>
        </p>
        <% @task.categories.each do |category| %>
          <span class="badge badge-primary"><%= category.name %></span>
        <% end %>
        <h3><%=@task.title %>

        <% if @task.priority = 1 %>
          <i class="fa-solid fa-droplet" style="color: #ff0000;"></i>
        <% elsif @task.priority = 2 %>
          <i class="fa-solid fa-droplet" style="color: #ff2780;"></i>
        <% else %>
          <i class="fa-solid fa-droplet" style="color: #ff8080;"></i>
        <% end %>
        </h3>
        <p>------------------------</p>
          <%=@task.description %>
        <p>------------------------</p>

          <% if @task.completed?%>
            <i class="fa-regular fa-square-check" style="color: #c0c0c0;"></i> Task completed
          <% else %>
            <i class="fa-regular fa-square" style="color: #c0c0c0;"></i> Task not completed
          <% end %>
        <p>------------------------</p>

          <%=@task.due_date %>
        <p>------------------------</p>

        <%=@task.reminder_date %>

      <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-reminder">Set reminder</button>
      </div>


      <hr>
      <p>
        <%= link_to tasks_path do %>
          <i class="fa fa-history"></i> Back to Task Lists
        <% end %>
        </p>
        <p>
        <%= link_to edit_task_path(@task.id) do %>
          <i class="fa fa-pencil"></i>
        <% end %>
       </p>
       <p>
          <%= link_to "Delete", tasks_path, method: :delete do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
       </p>
    </div>
   </div>
  </div>
