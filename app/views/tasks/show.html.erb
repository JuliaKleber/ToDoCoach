<div class="container">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="bg-background-color rounded p-3">

        <h2>TASK</h2>


      <div>
        <% @task.categories.each do |category| %>
        <div class="d-flex justify-content-center">
          <span class="border rounded category"><%= category.name %></span>
        </div>
      <% end %>
      </div>
      <p>
      <div class="text-center">
        <h3>
          <%=@task.title %>
          <%= render 'priority_dot', task: @task %>
        </h3>
      </div>
     </p>

       <div class="search-show d-flex align-items-center">
       <span>
         <%= render 'toggle_completed', task: @task %>
        <%=@task.description %>
        </span>
        </div>

      </div>
      <div class="search-show">
     <p>
        <%=@task.due_date.strftime('%a, %d %B, %I:%M %p') %>
     </p>
          <p>
           <span> Reminder:
            <%=@task.reminder_date.strftime('%a, %d %B, %I:%M %p') %> </span>
           </p>
     <p>
      <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-reminder">Set reminder</button>
      </div>
      </div>
    </p>
        <hr>

        <p>
          <%= link_to 'javascript:history.back()', remote: true do %>
            <i class="fa fa-history"></i> Back to Task Lists
          <% end %>
        </p>

        <p>
        <%= link_to edit_task_path(@task) do %>
          <i class="fa fa-pencil"></i>
        <% end %>
       </p>
    </div>
  </div>
<div>
