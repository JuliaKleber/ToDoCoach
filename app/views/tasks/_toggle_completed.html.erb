<% if task.completed %>
  <%= link_to toggle_completed_task_path(task), data: {turbo_method: :patch} do %>
    <i class='fa-regular fa-circle-check large-font'></i>
  <% end %>
<% else %>
  <%= link_to toggle_completed_task_path(task), data: {turbo_method: :patch} do %>
    <i class='fa-regular fa-circle large-font'></i>
  <% end %>
<% end %>
